{
	"compilerOptions": {
		"sourceMap": true,
		"target": "ES6",
		"listFiles": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"strict": true,
		"isolatedModules": true,
		"allowJs": false,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"types": [
			"lodash",
			"node"
		],
		"declaration": true,
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types",
			"src/typings.d.ts"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/types/index.js",
	],
	"exclude": [
		"node_modules"
	]
}