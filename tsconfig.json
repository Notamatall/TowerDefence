{
	"compilerOptions": {
		"sourceMap": true,
		"target": "ES6",
		"listFiles": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"strict": true,
		"allowJs": false,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"types": [
			"lodash",
			"node"
		],
		"declaration": true,
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types",
			"src/typings.d.ts"
		],
	},
	"paths": {
		"@/*": [
			"src/*"
		]
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}